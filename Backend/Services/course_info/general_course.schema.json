{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "General Course Information Schema",
    "type": "object",
    "properties": {
      "course": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier or code for the course"
          },
          "title": {
            "type": "string",
            "description": "Full course title"
          },
          "term": {
            "type": "string",
            "description": "Term or semester identifier"
          },
          "lecture_sections": {
            "type": "array",
            "description": "List of lecture sections",
            "items": {
              "type": "object",
              "properties": {
                "identifier": {
                  "type": "string",
                  "description": "Identifier for the lecture section (e.g., '0101')"
                },
                "time": {
                  "type": "string",
                  "description": "Scheduled time for the lecture section"
                }
              },
              "required": ["identifier", "time"]
            }
          },
          "tutorial_sections": {
            "type": "array",
            "description": "List of tutorial sections",
            "items": {
              "type": "object",
              "properties": {
                "identifier": {
                  "type": "string",
                  "description": "Identifier for the tutorial section"
                },
                "time": {
                  "type": "string",
                  "description": "Scheduled time for the tutorial section"
                }
              },
              "required": ["identifier", "time"]
            }
          },
          "communication": {
            "type": "object",
            "description": "Communication channels for the course",
            "properties": {
              "platforms": {
                "type": "array",
                "description": "List of communication platforms",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the communication platform (e.g., Piazza, Canvas)"
                    },
                    "url": {
                      "type": "string",
                      "format": "uri",
                      "description": "URL for the communication platform"
                    }
                  },
                  "required": ["name", "url"]
                }
              }
            },
            "required": ["platforms"]
          },
          "labs": {
            "type": "object",
            "description": "Information about lab sessions",
            "properties": {
              "start_week": {
                "type": "number",
                "description": "Week number when labs begin"
              },
              "submission": {
                "type": "object",
                "description": "Lab submission details",
                "properties": {
                  "platform": {
                    "type": "string",
                    "description": "Submission platform (e.g., MarkUs)"
                  },
                  "policy": {
                    "type": "string",
                    "description": "Submission policy details"
                  }
                },
                "required": ["platform", "policy"]
              },
              "schedule": {
                "type": "array",
                "description": "Schedule of lab sessions",
                "items": {
                  "type": "object",
                  "properties": {
                    "week": {
                      "type": "number",
                      "description": "Lab week number"
                    },
                    "date": {
                      "type": "string",
                      "description": "Date of the lab session"
                    },
                    "topic": {
                      "type": "string",
                      "description": "Topic of the lab session"
                    },
                    "notes": {
                      "type": "string",
                      "description": "Additional notes (optional)"
                    }
                  },
                  "required": ["week", "date", "topic"]
                }
              }
            },
            "required": ["start_week", "submission", "schedule"]
          },
          "office_hours": {
            "type": "object",
            "description": "Office hours for course staff",
            "properties": {
              "staff": {
                "type": "array",
                "description": "List of staff members with office hours",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the staff member"
                    },
                    "role": {
                      "type": "string",
                      "description": "Role (e.g., Instructor, TA)"
                    },
                    "schedule": {
                      "type": "array",
                      "description": "Office hours schedule for the staff member",
                      "items": {
                        "type": "object",
                        "properties": {
                          "day": {
                            "type": "string",
                            "description": "Day of the week"
                          },
                          "time": {
                            "type": "string",
                            "description": "Time range for office hours"
                          }
                        },
                        "required": ["day", "time"]
                      }
                    }
                  },
                  "required": ["name", "role", "schedule"]
                }
              }
            },
            "required": ["staff"]
          },
          "lectures": {
            "type": "array",
            "description": "List of lectures",
            "items": {
              "type": "object",
              "properties": {
                "number": {
                  "type": "number",
                  "description": "Lecture number"
                },
                "topic": {
                  "type": "string",
                  "description": "Topic or title of the lecture"
                },
                "resources": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "A single resource link or filename"
                    },
                    {
                      "type": "array",
                      "description": "List of resource links or filenames",
                      "items": { "type": "string" }
                    }
                  ]
                }
              },
              "required": ["number", "topic"]
            }
          },
          "assignments": {
            "type": "array",
            "description": "List of assignments, projects, or other graded work",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the assignment or project"
                },
                "details": {
                  "type": "string",
                  "description": "Additional details about the assignment (optional)"
                },
                "file": {
                  "type": "string",
                  "description": "Link or filename for the assignment submission file"
                },
                "group_info": {
                  "type": "string",
                  "description": "Information about allowed group sizes (optional)"
                },
                "deadline": {
                  "type": "string",
                  "description": "Deadline for the assignment (optional)"
                }
              },
              "required": ["name", "file"]
            }
          },
          "files": {
            "type": "object",
            "description": "Mapping of file names to their URL links",
            "patternProperties": {
              ".*": {
                "type": "string",
                "format": "uri"
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "id",
          "title",
          "term",
          "lecture_sections",
          "communication",
          "labs",
          "office_hours",
          "lectures",
          "assignments",
          "files"
        ]
      }
    },
    "required": ["course"]
}
  